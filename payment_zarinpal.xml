	<files>
		<filename plugin="payment_zarinpal">payment_zarinpal.php</filename>
		<filename plugin="payment_zarinpal">trangell_inputcheck.php</filename>
		<filename>index.html</filename>
		<folder>payment_zarinpal</folder>
